# ============================================
# rKYC Backend Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Application
APP_NAME=rKYC
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Supabase Database (Tokyo ap-northeast-1)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:6543/postgres?sslmode=require
# Get from: Supabase Dashboard → Settings → Database → Connection String (Transaction mode)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres?sslmode=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Supabase API (for Auth)
# Get from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=eyJhbG...your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=eyJhbG...your_service_role_key_here

# Redis (for Celery Worker)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://rkyc.vercel.app

# Security
SECRET_KEY=your-secret-key-here-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM API Keys (Worker only - NOT for Backend API!)
# NOTE: Backend API server should NOT have these keys
# These environment variables are ONLY used by the Worker component
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...

# Perplexity (External Search - Worker only)
PERPLEXITY_API_KEY=pplx-...

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
